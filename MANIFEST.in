# Include all files from the smart_fixtures package
graft smart_fixtures

# Exclude the tests directory inside smart_fixtures
prune smart_fixtures/tests

# Exclude specific directories and files that should not be part of the package
prune dummy
prune core
prune media
prune htmlcov

# Exclude specific file types that are not needed
exclude *.pyc
exclude *.pyo
exclude .coverage
exclude db.sqlite3
exclude .gitignore
exclude MANIFEST.in
exclude poetry.lock
exclude pyproject.toml
exclude tox.ini
